            .ai-badge-tooltip a {
                font-size: 0.9em;
                color: var(--primary-color-level-0);
                text-decoration: none;
                display: inline-block;
            }

            .ai-badge-tooltip a:hover {
                text-decoration: underline;
            }

            .overlay-background {
                position: absolute;
